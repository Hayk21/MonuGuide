<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back44"
    android:orientation="vertical"
    tools:context="blue_team.com.monuguide.fragments.DetailsFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/monument_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

    <TextView
        android:id="@+id/short_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginTop="@dimen/medium_brush"
        android:layout_marginLeft="@dimen/small_brush"
        android:layout_marginRight="@dimen/small_brush"
        android:layout_marginBottom="@dimen/small_brush"
        android:maxLines="9"
        android:textColor="@color/text_color"
        android:textStyle="italic"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/small_brush"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/location_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@mipmap/location_icon7"
            android:scaleType="fitStart"/>


        <ImageView
            android:id="@+id/heart_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@mipmap/star_icon7"
            android:tag="default"/>

        <ImageView
            android:id="@+id/comment_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/comment_icon7" />



        <ImageView
            android:id="@+id/wiki_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/wiki_icon7" />


    </LinearLayout>

    </LinearLayout>


</LinearLayout>
